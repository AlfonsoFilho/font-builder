  fontname: myfont

  fullname: MyFont
  familyname: Myfont

  copyright: Copyright (C) 2012 by xxxxxxxx

  ascent: 1638
  descent: 410
  weight: Regular

glyphs:
  - css: add-contact-add-user
    from: 0xe001
