    from: 0xf001
    code: 0xf002
    src:  awesome

src_fonts: 
  iconic: "/absolute/path/to/iconic.ttf"
  entypo: "/absolute/path/to/entypo.ttf"
  awesome: "/absolute/path/to/fontawesome.ttf" 

